{
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/node_modules": true
	},

	"editor.useTabStops": true,
	"editor.tabSize": 4,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,

	"liveServer.settings.root": "/dist"
}
